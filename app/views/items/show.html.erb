<div class="row">
  <div class="col-md-12">
    <h1><%= @item.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <p><%= @item.description %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h6>Price: <%= number_to_currency @item.price %></h6>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <table class="table">
      <thead>
      <tr>
        <th>Size</th>
        <th>Number Sold</th>
      </tr>
      </thead>
      <tbody>
      <% @item.sizes.each do |s| %>
        <tr>
          <td><%= s.size %></td>
          <td><%= s.purchases.where(item: @item).count %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<% unless @item.photo.file.nil? %>
<%= image_tag @item.photo.url, style: 'max-width: 300px;' %>
<% end %>
<br><br>
<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
