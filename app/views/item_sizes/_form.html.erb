<%= form_with(model: item_size, url: item_size.new_record? ? item_item_sizes_path : item_item_size_path, local: true) do |form| %>
  <% if item_size.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item_size.errors.count, "error") %> prohibited this item_size from being saved:</h2>

      <ul>
      <% item_size.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, id: 'item_size_name', class: 'form-control', placeholder: 'Size Name' %>
    </div>

    <div class="form-group">
      <%= form.label :price %>
      <div class="input-group">
        <div class="input-group-addon">$</div>
        <%= form.number_field :price, id: 'item_size_price', class: 'form-control', placeholder: 'Size Price', step: 0.01 %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :quantity, 'Quantity Available' %>
      <%= form.number_field :quantity, id: 'item_size_quantity', class: 'form-control', placeholder: 'Quantity Available', step: 1 %>
    </div>

    <div class="form-check">
      <label for="item_size_has_quantity" class="form-check-label">
        <%= form.check_box :has_quantity, id: 'item_size_has_quantity', class: 'form-check-input', checked: true %>Do not allow orders to be placed when quantity is 0 (it's reasonable to leave this checked)
      </label>
    </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
