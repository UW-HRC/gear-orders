<%= provide :title, 'HRC Gear Orders' %>

<% if user_signed_in? %>

    <p>Welcome, <%= current_user.email %>. Here are some things you can do:</p>
    <ul>
      <li><%= link_to 'View Sales and Edit Items for Sale', items_path %></li>
      <li><%= link_to 'View Orders', orders_path %></li>
      <li><%= link_to 'Update Your Password', edit_user_registration_path %></li>
    </ul>

    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-header">
            Send Unfinished Order Email
          </div>
          <div class="card-body">
            <p class="card-text">Send an email to everyone who has created an order, but has not yet finalized it.</p>
            <%= link_to 'Send Mail', unfinished_order_mail_path, class: 'btn btn-primary', 'data-confirm': 'About to send email. Are you sure?', method: :patch %>
          </div>
        </div>
      </div>
    </div>


<% else %>
    <div class="row">
      <div class="col-md-12">
        <div class="jumbotron">
          <h1 class="display-3">Husky Running Club Gear Orders</h1>
          <hr class="my-4">
          <p class="lead">
            You can use this website to order gear for Husky Running Club!
            <br>
            <span class="text-info"><%= ENV['FRONT_PAGE'] || '' %></span>
          </p>
          <%= link_to 'Order Gear', new_order_path, class: 'btn btn-primary' %>
          <br><br>
          <p>This logo will be printed on all the gear (minus the purple background on black clothing):</p>
          <%= image_tag image_path('hrc_purple_dog.jpg'), style: 'widtH: 200px; border-radius: 6px;' %>
        </div>
        <%= link_to 'Officer Sign-In', new_user_session_path %>
      </div>
    </div>
<% end %>
