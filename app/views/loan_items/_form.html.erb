<%= form_with model: @loan_item, local: true do |f| %>
  <div class="form-group">
    <label for="loan_item_name">Item Name</label>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Item Name' %>
  </div>
  <div class="form-group">
    <label for="loan_item_inventory_number">Inventory Number</label>
    <%= f.text_field :inventory_number, class: 'form-control', placeholder: 'Inventory Number', type: 'number' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', :back, class: "btn btn-link" %>
  </div>
<% end %>