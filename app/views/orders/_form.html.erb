<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>

  <% end %>

    <% if order.new_record? %>
        <p>First, we need a little bit of information about you, so we can keep track of your order.</p>
    <% end %>

    <div class="form-row">
      <div class="col">
        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, id: 'order_first_name', class: 'form-control', placeholder: 'Your first name' %>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, id: 'order_last_name', class: 'form-control', placeholder: 'Your last name' %>
        </div>
      </div>
    </div>


    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, id: 'order_email', class: 'form-control', placeholder: 'Your email' %>
      <small class="form-text text-muted">If you have a UW email, please use that one.</small>
    </div>

    <div class="actions">
    <%= form.submit order.new_record? ? 'Begin Order': 'Update Order', class: 'btn btn-primary' %>
  </div>
<% end %>
